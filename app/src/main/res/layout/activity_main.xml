<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zoro175.tajwid.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/menu_utama">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:id="@+id/button"
                android:layout_marginTop="200dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/menu_pengenalan" />

            <Button
                android:layout_height="45dp"
                android:id="@+id/button2"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="190dp"
                android:background="@drawable/menu_konsep"/>

            <Button
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:id="@+id/button3"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/menu_nun_sakinah"/>

            <Button
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:id="@+id/button4"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/menu_mim_sakinah"/>

            <Button
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:id="@+id/button5"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/menu_kredit"/>

            <Button
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:id="@+id/button6"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/menu_keluar"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
