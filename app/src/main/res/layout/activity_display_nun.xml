<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_nun"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zoro175.tajwid.DisplayNunActivity"
    android:orientation="vertical"
    android:background="@drawable/menu_nun_sakinah_bg">

    <Button
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:id="@+id/button7"
        android:layout_marginTop="190dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/nun_izhar"/>

    <Button
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/button8"
        android:background="@drawable/nun_idgham_bila"/>

    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:id="@+id/button9"
        android:background="@drawable/nun_idgham_maal"/>

    <Button
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:id="@+id/button10"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/nun_iqlab"/>

    <Button
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:id="@+id/button11"
        android:background="@drawable/nun_ikhfa_haqiqi"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:id="@+id/button12"
        android:background="@drawable/laman_utama"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

</LinearLayout>
